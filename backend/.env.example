# Orlando Savings Engine - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# SerpApi Configuration (Required for hotel/deal search)
# ===========================================
# Get your API key from: https://serpapi.com/manage-api-key
SERP_API_KEY=your_serpapi_key_here

# ===========================================
# Amadeus Configuration (Required for flight search)
# ===========================================
# Sign up at: https://developers.amadeus.com/
# Create an app to get your credentials
AMADEUS_API_KEY=your_amadeus_api_key_here
AMADEUS_API_SECRET=your_amadeus_api_secret_here

# Use test environment for development
# Change to https://api.amadeus.com for production
AMADEUS_BASE_URL=https://test.api.amadeus.com

# ===========================================
# Server Configuration
# ===========================================
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ===========================================
# Optional: Future Integrations
# ===========================================
# RENTAL_CARS_API_KEY=your_rental_cars_key
# KAYAK_API_KEY=your_kayak_key
